# Dynaconf secrets file example
# Copy this to .secrets.toml and fill in your actual values
# DO NOT commit .secrets.toml to version control

[default]
# Security keys - generate strong random keys for production
secret_key = "your-secret-key-here-change-in-production"
jwt_secret_key = "your-jwt-secret-key-here"

# OAuth2 Provider credentials
google_client_id = "your-google-client-id"
google_client_secret = "your-google-client-secret"
facebook_app_id = "your-facebook-app-id"
facebook_app_secret = "your-facebook-app-secret"

[development]
# Development OAuth2 credentials (can be different from production)
google_client_id = "your-dev-google-client-id"
google_client_secret = "your-dev-google-client-secret"
facebook_app_id = "your-dev-facebook-app-id"
facebook_app_secret = "your-dev-facebook-app-secret"

[production]
# Production database and secrets
database_url = "postgresql+asyncpg://user:password@localhost/speeddating"
secret_key = "production-secret-key-very-long-and-random"
jwt_secret_key = "production-jwt-secret-key-very-long-and-random"

# Production OAuth2 credentials
google_client_id = "production-google-client-id"
google_client_secret = "production-google-client-secret"
facebook_app_id = "production-facebook-app-id"
facebook_app_secret = "production-facebook-app-secret"